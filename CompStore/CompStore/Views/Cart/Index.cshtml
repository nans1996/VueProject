@model IEnumerable<CompStore.Cart>



<text>Статус: в процессе формирования</text>
<table class="table">
    <tr>
        <th>
            Товар
        </th>
        <th>
            Количество
        </th>
        <th>
           Цена
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Product.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>

                @Html.ActionLink("Удалить", "Delete", new { id = item.id_product })
            </td>
        </tr>
        
    }

</table>

<p>
    @Html.ActionLink("Очистить", "DeleteAll")
</p>
<p>
   @Html.ActionLink("Назад", "Index", "Product") | @Html.ActionLink("Оформить продажу", "Create", "Selling") 
</p>



   
